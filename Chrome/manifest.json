{
  "manifest_version": 2,
  "name": "AlienTube for YouTubeâ„¢",
  "short_name": "AlienTube",
  "description": "Reddit Comments for YouTube",
  "author": "Delexious",
  "homepage_url": "http://alientube.co/",
  "version": "2.0.11",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "minimum_chrome_version": "37.0",
  "content_security_policy": "script-src 'self' https://api.reddit.com; object-src 'self'",
  "options_page": "options.html",
  "default_locale": "en",

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://alientube.co/"],
      "js": ["js/snuownd.js", "js/script.js"],
      "css": ["res/style.css"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "http://www.youtube.com/",
    "https://www.youtube.com/",
    "https://api.reddit.com/",
    "http://alientube.co/",
    "storage"
  ],

  "web_accessible_resources": [
    "res/style.css",
    "chrome_shared.css",
    "js/*",
    "res/*",
    "TypeScript/*",
    "icon128.png"
  ]
}
